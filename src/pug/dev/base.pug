    meta(name="viewport" content="width=device-width,initial-scale=1")
    meta(name="description" content=description)
    title
      block title
  body
    block header
      +header({
        logo: 'img/logo.svg',
        logoAlt: description,
        logoHref: 'index.html',
        list: [
          {
            caption: 'О нас',
            href: 'about',
          },
          {
            caption: 'Услуги',
