include ../../components/input/input
include ../../components/date-pair/date-pair
include ../../components/checkbox/checkbox
include ../../components/advantages/advantages
include ../../components/radio/radio
include ../../components/like-button/like-button
include ../../components/rate/rate
include ../../components/review/review
include ../../components/range/range
include ../../components/button/button
include ../../components/arrow-button/arrow-button
include ../../components/pagination/pagination
include ../../components/bullets/bullets

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    title Form Elements
  body
    .container
      .row.row_space-between
        div(class="column column_md-half column_lg-third" id="column1-1")
          +input({label: "text field", placeholder: "Email"})
          +input({blockId: "input-focused", label: "text field", value: "This is pretty awesome"}).input_focused
          +input({
            blockId: "dropdown-1",
            mode: "dropdown",
            label: "Dropdown",
            selectQuestion: "Сколько гостей",
            list: [
              {caption: "взрослые"},
              {caption: "дети"},
              {caption: "младенцы"}
            ]
          })
          +input({
            mode: "date",
            inputId: "ui-single-date",
            label: "Masked text field",
            placeholder: "ДД.ММ.ГГГГ",
            mask: "00.00.0000"
          }).mb40
          +date-pair({
            blockId: "date-pair-1",
            mode: "dropdown",
            label_1: "Date dropdown",
            label_2: "Date dropdown",
            placeholder: "ДД.ММ.ГГГГ",
            mask: "00.00.0000"
          }).mb20

          .field-container.field-container_lg-small
            +input({
              blockId: "",
              mode: "date-range|dropdown",
              classInput: "datepicker-small",
              label: "Filter date dropdown"
            }).mb40
            +input({mode: "subscribe", label: "Subscription text field", placeholder: "Email"}).mb30

        div(class="column column_md-half column_lg-third" id="column1-2")
          +checkbox({
            blockId: "checkbox-top",
            caption: "Checkbox buttons",
            list: [
              {caption: "Можно курить"},
              {caption: "Можно с питомцами", checked: true},
              {caption: "Можно пригласить гостей<br>(до 10 человек)", checked: true}]
          })
          +radio({
            caption: "Radio buttons",
            data: [
              {value: "male", label: "Мужчина"},
              {value: "female", label: "Женщина"}
            ]
          }).mb40
          +checkbox({
            blockId: "checkbox-toggler",
            toggler: true,
            caption: "Toggle",
            list: [
              {caption: "Получать спецпредложения", checked: true},
              {caption: "Получать спецпредложения"}
            ]
          })
          p.caption= 'Like button'
          div(class="row row_sm-justify-center mb40")
            +like-button({count: 2}).mr10
            +like-button({count: 12, voted: true})
          p.caption#rate-wrapper-caption= 'Rate button'
          div(class="row row_sm-justify-center mb40" id="rate-wrapper")
            +rate({blockId: "rate-block1", rate: 3.8}).mr20
            +rate({blockId: "rate-block2", rate: 5})
        div(class="column column_lg-third")
            div(class="row row_sm-justify-center")
              +range({caption: "Range slider", min: 0, max: 16000, start: 5000, end: 10000, symbol: "₽"}).mb30
            p.caption= 'Buttons'
            div(class="row row_sm-justify-center mb30")
              +button({id: 'button-1', text: 'Click me'})
              +button({text: 'Click me'}).button_hover
            div(class="row row_sm-justify-center mb30" id="row-1-3-2-2")
              +button({id: 'button-2', text: 'Click me', hollow: true})
              +button({text: 'Click me', hollow: true}).button_hover
            div(class="row row_sm-justify-center mb30")
              +button({id: 'button-3', text: 'Click me', link: true})
              +button({text: 'Click me', link: true}).button_hover
            div(class="row row_sm-justify-center")
              +button({text: 'Перейти к оплате', subscribe: true}).mb40
            p.caption= 'Pagination'
            +pagination({max: 15, caption: '1 – 12 из 100+ вариантов аренды'})
      .row.row_space-between
        div(class="column column_md-half" id="column-2-1")
            +input({
              blockId: "dropdown-recount",
              mode: "dropdown",
              label: "Dropdown",
              classInput: "canted",
              selectQuestion: "Какие удобства",
              list: [
                {caption: "спальни", sum: 2},
                {caption: "кровати", sum: 2},
                {caption: "ванные комнаты"}
              ]
            }).input_recount
            +input({
              blockId: "dropdown-expanded",
              mode: "dropdown",
              label: "Dropdown",
              classInput: "canted",
              selectQuestion: "Какие удобства",
              list: [
                {caption: "спальни", sum: 2},
                {caption: "кровати", sum: 2},
                {caption: "ванные комнаты"}
              ]
            }).input_recount.expanded
        div(class="column column_md-half" id="column-2-2")
          +input({
            blockId: "input-list-apply",
            mode: "dropdown",
            label: "Dropdown",
            classInput: "canted",
            selectQuestion: "Сколько гостей",
            list: [
              {caption: "взрослые"},
              {caption: "дети"},
              {caption: "младенцы"}
            ],
            applyButton: true
          }).expanded
        div(class="column" id="column-2-3")
          +input({
            blockId: "input-list-apply-clear",
            mode: "dropdown",
            label: "Dropdown",
            classInput: "canted",
            selectQuestion: "Сколько гостей",
            selectCaption: true,
            list: [
              {caption: "взрослые"},
              {caption: "дети"},
              {caption: "младенцы"}
            ],
            applyButton: true,
            clearButton: true
          }).expanded
      .row.row_space-between
        div(class="column column_md-half" id="column-3-1")
          .field-container.field-container_lg-small
            +checkbox({
              blockId: "checkbox-minimized",
              caption: "Expandable checkbox list",
              list: [
                {caption: "Завтрак"},
                {caption: "Письменный стол"},
                {caption: "Стул для кормления"},
                {caption: "Кроватка"},
                {caption: "Телевизор"},
                {caption: "Шампунь"}
              ],
              expandable: true
            })
            +checkbox({
              blockId: "checkbox-bottom",
              caption: "Expandable checkbox list",
              list: [
                {caption: "Завтрак"},
                {caption: "Письменный стол", checked: true},
                {caption: "Стул для кормления", checked: true},
                {caption: "Кроватка", checked: true},
                {caption: "Телевизор"},
                {caption: "Шампунь"},
                {caption: "Телевизор"},
                {caption: "Шампунь"},
              ],
              expandable: true
            }).expanded
        div(class="column column_md-half" id="column-3-2")
          +checkbox({
            caption: "Rich checkbox buttons",
            list: [
              {rich: "Широкий коридор", caption: "Ширина коридоров в номере<br>не менее 91 см."},
              {rich: "Помощник для инвалидов", caption: "На 1 этаже вас встретит специалист  и проводит до номера."}
            ]
          })
        div(class="column column_sm-align-center")
          p.caption#bullets-caption= 'Bullet list'
          +bullets({list: [
              'Нельзя с питомцами',
              'Без вечеринок и мероприятий',
              'Время прибытия — после 13:00,<br>а выезд до 12:00'
            ]})
      .row
        .column#column-4-1
          +advantages({
            data: [
              {caption: "Комфорт", img: "../img/advantages-smile.png", text: "Шумопоглощающие стены"},
              {caption: "Удобство", img: "../img/advantages-city.png", text: "Окно в каждой из спален"}
            ]
          })
        .column#column-4-2
          +review({
            person: {name: "Мурад Сарафанов", img: "../img/persons/1.png"},
            text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
            likes: 12,
            date: Date.now() - 4.5*24*3600*1000
          })